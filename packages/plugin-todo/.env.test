# Test environment configuration for plugin-todo
# This uses BunSqlite for in-memory testing to avoid PostgreSQL dependency

# Database configuration - use BunSqlite for tests
DATABASE_ADAPTER=bunsqlite
BUN_SQLITE_IN_MEMORY=true
BUN_SQLITE_FILENAME=:memory:

# Model configuration
MODEL_PROVIDER=anthropic
ANTHROPIC_API_KEY=test-api-key
OPENAI_API_KEY=test-api-key

# Testing flags
NODE_ENV=test
LOG_LEVEL=error

# Disable external services for testing
DISABLE_EXTERNAL_SERVICES=true